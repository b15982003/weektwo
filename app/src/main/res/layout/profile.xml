<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/MyPhoto"
        android:layout_width="426dp"
        android:layout_height="283dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/my_photo"
        android:src="@drawable/mypng" />

    <TextView
        android:id="@+id/my_name"
        style="@style/ProfileTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="220dp"
        android:text="@string/myname" />

    <TextView
        android:id="@+id/my_nickname"
        style="@style/ProfileTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="8dp"
        android:text="@string/nick_name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/about_me"
        style="@style/ProfileTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="8dp"
        android:text="@string/about_me" />

    <TextView
        android:id="@+id/nameAll"
        style="@style/profiletextstyle"
        android:layout_marginStart="50dp"
        android:layout_marginTop="360dp"
        android:text="@string/Ray_Chang" />

    <TextView
        android:id="@+id/my_nick_name"
        style="@style/profiletextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="360dp"
        android:text="@string/Ray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp">


        <TextView
            android:id="@+id/textView6"
            style="@style/profiletextstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/bio" />

    </ScrollView>

</FrameLayout>